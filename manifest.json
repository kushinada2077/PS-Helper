{
    "manifest_version": 3,
    "name": "BackJoon Submit",
    "version": "1.0",
    "description": "A helper extension for problem solving websites.",
    "permissions": ["downloads"],
    "web_accessible_resources": [
        {
            "resources": ["src/boj_erase_main.js", "src/erase_utility.js"],
            "matches": ["https://www.acmicpc.net/*"]
        },
        {
            "resources": ["src/atcoder_erase_main.js", "src/erase_utility.js"],
            "matches": ["https://atcoder.jp/*"]
        },
        {
            "resources": ["src/codeforces_erase_main.js", "src/erase_utility.js"],
            "matches": ["https://codeforces.com/*"]
        },
        {
            "resources": ["src/algospot_erase_main.js", "src/erase_utility.js"],
            "matches": ["https://www.algospot.com/*"]
        }
    ],
    "content_scripts": [
        {
            "js": ["scripts/boj_erase.js"],
            "matches": ["https://www.acmicpc.net/submit/*"]
        },
        {
            "js": ["scripts/boj_input.js"],
            "matches": ["https://www.acmicpc.net/problem/*"],
            "exclude_matches": ["https://www.acmicpc.net/problem/history/*", "https://www.acmicpc.net/problem/status/*"]
        },
        {
            "js": ["scripts/atcoder_input.js", "scripts/atcoder_erase.js"],
            "matches": ["https://atcoder.jp/*/tasks/*", "https://atcoder.jp/contests/*/submit*"]
        },
        {
            "js": ["scripts/codeforces_input.js"],
            "matches": ["https://codeforces.com/contest/*/problem*"]
        },
        {
            "js": ["scripts/codeforces_erase.js"],
            "matches": ["https://codeforces.com/contest/*/submit*"]
        },
        {
            "js": ["scripts/algospot_erase.js"],
            "matches": ["https://www.algospot.com/judge/problem/submit/*"]
        },
        {
            "js": ["scripts/algospot_input.js"],
            "matches": ["https://www.algospot.com/judge/problem/read/*"]
        }
    ],
    "background": {
        "service_worker": "background/background.js"
    }
}
